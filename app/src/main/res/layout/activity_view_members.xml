<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.csi.csi_organiser.ViewMembersActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/actionbar"/>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="454dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
    <ListView
        android:layout_width="match_parent"
        android:id="@+id/presentmembers"
        android:layout_height="450dp">
    </ListView>
       </LinearLayout>
   </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dtwithattendence"
            android:layout_weight="0.5"
            android:text="DESTROY TASK AND ADD ATTENDENCE"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dtwithnoattendence"
            android:text="DESTROY TASK WITH NO ATTENDENCE"
            android:layout_weight="0.5"
            />
    </LinearLayout>

    </LinearLayout>
